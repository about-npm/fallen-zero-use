{
  "compilerOptions": {
    "baseUrl": ".",
    "jsx": "preserve",
    "outDir": "./dist",
    "declaration": true,
    "strict": true,
    "target": "es2016",
    "module": "ESNext",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "lib": ["ESNext", "DOM"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", ".*/"]
}
